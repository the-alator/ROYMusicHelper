{
  "manifest_version": 2,
  "name": "plugin1",
  "description": "ROYMusicHelper is a great extension which provides features of searching and downloading music from external resources",
  "version": "1.0",
  "permissions": [
    "<all_urls>", "downloads"
  ],

  "icons": { "48": "/resources/images/general/music-48.png" },
  "browser_action": {
    "default_icon": {
      "48": "/resources/images/general/music-48.png"
    },
    "default_title": "ROYMusicHelper",
    "default_popup": "src/main/general/popup.html"
  },
  "background": {
    "scripts": ["/src/main/general/background.js", "/lib/jquery-3.3.1.min.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://www.shazam.com/ru/myshazam*"],
      "js": ["/lib/jquery-3.3.1.min.js", "/src/injects/shazam.js"]
    }
  ]
}
