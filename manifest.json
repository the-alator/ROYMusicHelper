{
  "manifest_version": 2,
  "name": "plugin1",
  "description": "ROYMusicHelper is a great extension which provides features of searching and downloading music from external resources",
  "version": "1.0",
  "permissions": [
    "<all_urls>", "downloads"
  ],

  "icons": { "48": "/resources/images/general/music-48.png" },
  "browser_action": {
    "default_icon": {
      "48": "/resources/images/general/music-48.png"
    },
    "default_title": "ROYMusicHelper",
    "default_popup": "src/main/general/popup.html"
  },
  "background": {
    "scripts": ["/lib/jquery-3.3.1.min.js",
      "/src/main/general/background.js",
      "/src/SAD/SADManager.js",
//      "/src/SAD/sources/fileSources/mp3party.net.js",
      "/src/SAD/sources/fileSources/zaycev.net.js",
//      "/src/SAD/sources/fileSources/zk.fm.js",
//      "/src/SAD/sources/fileSources/godfaithculture.com.js",
      "/src/SAD/cycle.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://www.shazam.com/*"],
      "js": ["/lib/jquery-3.3.1.min.js", "/src/injects/shazam.js"],
      "css": ["/src/injects/shazam.css"]
    },
    {
      "run_at": "document_end",
      "matches": ["http://zk.fm/?UNIQUEROYMUSICHELPER=E"],
      "js": ["/lib/jquery-3.3.1.min.js", "/src/injects/zkFmIframeDownloader.js"],
      "all_frames": true
    },
    {
      "run_at": "document_start",
      "matches": ["http://mp3party.net/*"],
      "js": ["/lib/jquery-3.3.1.min.js", "/src/injects/mp3party.net.js"]
    }
  ],
  "web_accessible_resources": ["resources/images/general/*"]
}
